<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/colorOnPrimary"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recycler_textView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="23sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recycler_textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/recycler_textView_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_textView_item"
        tools:text="Text" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/like_image"
        android:src="@drawable/ic_like_false"
        app:layout_constraintBottom_toBottomOf="@id/recycler_textView_item"
        app:layout_constraintEnd_toStartOf="@id/swipe_image"
        app:layout_constraintTop_toTopOf="@+id/recycler_textView_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:alpha="0.7"
        android:id="@+id/swipe_image"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_menu"
        android:tint="?attr/colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="@id/recycler_textView_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_textView_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/darkGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_textView_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>