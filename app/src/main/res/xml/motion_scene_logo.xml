<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start" />

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image_logo"
            android:layout_width="@dimen/image_logo_length"
            android:layout_height="@dimen/image_logo_length"
            android:layout_marginBottom="5dp"
            motion:layout_constraintBottom_toTopOf="@id/chips_layout_new"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/chips_layout_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginStart="5dp"
            motion:layout_constraintBottom_toBottomOf="@id/image_logo"
            motion:layout_constraintTop_toTopOf="@+id/image_logo"
            motion:layout_constraintStart_toEndOf="@id/image_logo" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/image_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/chips_layout_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/image_logo" />
        <Constraint
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginStart="5dp"
            motion:layout_constraintBottom_toBottomOf="@id/image_logo"
            motion:layout_constraintTop_toTopOf="@+id/image_logo"
            motion:layout_constraintStart_toEndOf="@id/image_logo" />
    </ConstraintSet>
</MotionScene>