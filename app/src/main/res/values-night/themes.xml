        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">@style/CustomShapeAppearance.SmallComponent
        </item>
        <item name="dialogBackground">@color/background_light</item>
